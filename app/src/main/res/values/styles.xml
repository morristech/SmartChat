<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/NORAML_FONT_SIZE</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DefaultTimeText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/MIDDLE_FONT_SIZE</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DefaultTextEnd" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/NORAML_FONT_SIZE</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

</resources>
